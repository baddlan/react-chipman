{
  "name": "react-chipman",
  "version": "0.0.0-semantically-released",
  "description": "A React component for managing an ordered list of chips.",
  "author": "baddlan",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/baddlan/react-chipman.git"
  },
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "jsnext:main": "dist/index.es.js",
  "engines": {
    "node": ">=8",
    "npm": ">=5"
  },
  "scripts": {
    "build": "rollup -c",
    "clean": "rimraf ./dist",
    "commit": "./node_modules/.bin/commit",
    "copy:shared": "copyfiles ./README.md ./projects/ngx-ratio-bar && copyfiles ./LICENSE ./projects/ngx-ratio-bar",
    "deploy": "gh-pages -d example/build",
    "lint": "yarn tslint --project .",
    "start": "rollup -c -w",
    "prepare": "yarn run build",
    "predeploy": "cd example && yarn install && yarn run build",
    "publish:docs": "npx angular-cli-ghpages --no-silent --repo=git@github.com:baddlan/react-chipman.git --dir=./dist/react-chipman-showcase",
    "publish:lib": "npx semantic-release",
    "semantic-release": "semantic-release",
    "test": "cross-env CI=1 react-scripts-ts test --env=jsdom",
    "test:watch": "react-scripts-ts test --env=jsdom",
    "travis-deploy-once": "travis-deploy-once --pro"
  },
  "dependencies": {},
  "peerDependencies": {
    "lodash": "^4.17.15",
    "prop-types": "^15.5.4",
    "react": "^16.10.2",
    "react-dom": "^16.10.2",
    "react-smooth-dnd": "^0.11.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.4",
    "@commitlint/config-conventional": "^8.3.4",
    "@commitlint/prompt-cli": "^8.3.4",
    "@rollup/plugin-commonjs": "^11.0.1",
    "@rollup/plugin-node-resolve": "^6.1.0",
    "@semantic-release/changelog": "^3.0.6",
    "@semantic-release/exec": "^4.0.0",
    "@semantic-release/git": "^8.0.0",
    "@types/jest": "^23.1.5",
    "@types/lodash": "^4.14.149",
    "@types/react": "^16.3.13",
    "@types/react-dom": "^16.0.5",
    "babel-core": "^6.26.3",
    "babel-runtime": "^6.26.0",
    "codecov": "^3.6.1",
    "copyfiles": "^2.1.1",
    "cross-env": "^5.1.4",
    "gh-pages": "^2.2.0",
    "prettier": "1.19.1",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-scripts-ts": "^3.1.0",
    "react-smooth-dnd": "^0.11.1",
    "rimraf": "^3.0.0",
    "rollup": "^1.28.0",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-peer-deps-external": "^2.2.0",
    "rollup-plugin-postcss": "^2.0.3",
    "rollup-plugin-typescript3": "^1.1.2",
    "rollup-plugin-url": "^3.0.1",
    "semantic-release": "^16.0.1",
    "tslint": "^5.20.1",
    "tslint-react": "^4.1.0",
    "typescript": "^3.0.0"
  },
  "files": [
    "dist"
  ],
  "lint-staged": {
    "projects/**/*.ts": [
      "prettier --write",
      "git add"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "private": false,
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "release": {
    "pkgRoot": "dist/react-chipman"
  }
}
